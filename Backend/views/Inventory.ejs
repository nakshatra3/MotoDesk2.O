<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MotoDesk - Add Inventory</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h2>Inventory Registration</h2>
    <form action="/inventory/add" method="POST">
      
      <!-- CarID Input -->
      <label for="CarID">Car ID:</label>
      <input type="number" id="CarID" name="CarID" required>

      <!-- Name Input -->
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required>

      <!-- Model Dropdown (top, mid, bas) -->
      <label for="model">Model:</label>
      <select id="model" name="model" required>
        <option value="top">Top</option>
        <option value="mid">Mid</option>
        <option value="base">Base</option>
      </select>

      <!-- Cost Price Input -->
      <label for="costPrice">Cost Price (â‚¹):</label>
      <input type="number" id="costPrice" name="costPrice" required>

      <!-- Quantity Input -->
      <label for="quantity">Quantity:</label>
      <input type="number" id="quantity" name="quantity" required>

      <!-- Colour Input -->
      <label for="color">Colour:</label>
      <input type="text" id="color" name="color" placeholder="Enter Colour">

      <!-- Submit Button -->
      <button type="submit">Add to Inventory</button>
    </form>
  </div>
</body>
</html>
